{
  "name": "freshsauce/model",
  "type": "library",
  "description": "PHP Model class",
  "keywords": [
    "freshsauce",
    "orm",
    "model",
    "mysql",
    "pdo"
  ],
  "homepage": "https://www.freshsauce.co.uk/",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Dave Barnwell",
      "email": "dave@freshsauce.co.uk",
      "role": "lead"
    }
  ],
  "support": {
    "issues": "https://github.com/freshsauce/model-orm-php/issues"
  },
  "require": {
    "ext-pdo": "*",
    "php" : ">=8.3"
  },
  "autoload": {
    "psr-4": {
      "Freshsauce\\": "src/",
      "App\\": "test-src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.50"
  },
  "suggest": {
    "ext-pdo_mysql": "Required for MySQL/MariaDB support",
    "ext-pdo_pgsql": "Required for PostgreSQL support"
  },
  "config": {
    "platform": {
      "php": "8.3.0"
    }
  }
}
